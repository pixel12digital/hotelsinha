# ========================================
# TIPOS MIME
# ========================================

<IfModule mod_mime.c>
    # WebP
    AddType image/webp .webp
    
    # AVIF
    AddType image/avif .avif
    
    # Web Manifest
    AddType application/manifest+json .webmanifest
    
    # Fonts
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType font/otf .otf
    
    # Vídeos
    AddType video/mp4 .mp4
    AddType video/webm .webm
    AddType video/ogg .ogv
    
    # Outros
    AddType application/json .json
    AddType text/xml .xml
</IfModule>

# ========================================
# SEGURANÇA
# ========================================

# Previne acesso a arquivos sensíveis
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Headers de segurança
<IfModule mod_headers.c>
    # X-Frame-Options
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # X-Content-Type-Options
    Header always set X-Content-Type-Options "nosniff"
    
    # X-XSS-Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (básico)
    # TODO: Ajustar CSP conforme necessário
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data:; font-src 'self' data: https://fonts.gstatic.com;"
    
    # CORS para fontes/manifest
    <FilesMatch "\.(woff2|webmanifest)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# ========================================
# OTIMIZAÇÕES DE PERFORMANCE
# ========================================

# Remove ETags (usar Cache-Control)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Previne hotlinking de imagens
RewriteEngine On
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?hotelsinha\.com\.br [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?localhost [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F]

# ========================================
# URLS AMIGÁVEIS
# ========================================

# Remove extensão .html das URLs
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redireciona .html para URL sem extensão
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R=301]

